<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_activity_audio"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AudioActivity"
    android:background="@color/navy">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_back_activity_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/navigate_before"
        android:padding="5dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name_activity_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowRadius="6"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <com.skyfishjy.library.RippleBackground
        android:id="@+id/ripple_background"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:rb_color="@color/white"
        app:rb_radius="110dp"
        app:rb_duration="7000"
        app:rb_rippleAmount="6"
        app:rb_scale="2"
        app:rb_type="strokeRipple"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_timer_circle"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_centerInParent="true"
            android:src="@drawable/circle_white" />
    </com.skyfishjy.library.RippleBackground>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_countdown_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:typeface="monospace"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@id/ripple_background"
        app:layout_constraintBottom_toBottomOf="@id/ripple_background"
        app:layout_constraintLeft_toLeftOf="@id/ripple_background"
        app:layout_constraintRight_toRightOf="@id/ripple_background"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timer"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_countdown_timer"
        app:layout_constraintLeft_toLeftOf="@id/ripple_background"
        app:layout_constraintRight_toRightOf="@id/ripple_background"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_play_or_pause"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/pause_40dp"
        android:padding="10dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/background_button_play_pause"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>